<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:onClick="Perfil"
    tools:context=".QrCode">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#1B1A55"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="49dp"
            android:layout_height="52dp"
            android:background="@drawable/custom_button"
            android:onClick="Perfil"
            android:src="@drawable/imagem_do_usuario_com_fundo_preto" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="246dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:backgroundTint="#EBE5C2"
            android:fontFamily="@font/archivo_black"
            android:onClick="Scannear"
            android:text="Scannear "
            android:textColor="#1B1A55"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <Button
            android:id="@+id/btnGerar"
            android:layout_width="246dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:backgroundTint="#EBE5C2"
            android:fontFamily="@font/archivo_black"
            android:onClick="Criar"
            android:text="Criar Evento"
            android:textColor="#1B1A55"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>